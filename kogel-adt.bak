;; ----------  Kogel ADT  ----------
;;            -----------

(define (maak-kogel positie)
  (let ((type 'kogel))

    ;; beweeg! : / -> /
    (define (beweeg!)
      ((positie 'beweeg!) 'omhoog))

    ;; stop! : / > /
    (define (stop)
      ((positie 'beweeg!) 'stop))
    
    ;; dispatch functie
    (define (dispatch-kogel msg)
      (cond ((eq? msg 'positie) positie)
            ((eq? msg 'beweeg!) beweeg!)
            ((eq? msg 'stop) stop)
            ((eq? msg 'type) type)
            (else (display "ongeldige boodschap - kogel"))))

    dispatch-kogel))